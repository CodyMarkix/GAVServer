    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Run server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "..\\config.json"
            ],
            "env": {
                "GAV_DEBUG_MODE": "true"
            }
        }
    ]
}